<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.example.cookingrecipesrest.servlet.CategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecipeServlet</servlet-name>
        <servlet-class>com.example.cookingrecipesrest.servlet.RecipeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecipeServlet</servlet-name>
        <url-pattern>/recipe/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IngredientServlet</servlet-name>
        <servlet-class>com.example.cookingrecipesrest.servlet.IngredientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>IngredientServlet</servlet-name>
        <url-pattern>/ingredient/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecipeIngredientsServlet</servlet-name>
        <servlet-class>com.example.cookingrecipesrest.servlet.RecipeIngredientsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecipeIngredientsServlet</servlet-name>
        <url-pattern>/recipe-ingredient/*</url-pattern>
    </servlet-mapping>

</web-app>